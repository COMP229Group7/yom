<%- include ../partials/header.ejs %>

<%- include ../partials/top_nav.ejs %>
<%- include ../partials/login_nav.ejs %>

  <!-- content -->
   <!-- message area -->
   <% if(messages.length > 0) { %>
    <div class="alert alert-danger">
      <%= messages %>
    </div>
  <% } %>
<div class="container-sm btn-light p-5">
  <h1>Sign up</h1>
  <br>
    <form method="POST">
        <div class="form-group">
          <label for="exampleInputEmail1">Email address (This will be your username):</label>
          <input  style="width: 400px;" type="email" class="form-control" name="emailAddress" aria-describedby="emailHelp" placeholder="Enter email">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <br>
        <div class="form-group">
          <label for="exampleInputPassword1">Password:</label>
          <input  style="width: 400px;" type="password" class="form-control" name="password" placeholder="Password">
        </div>
        <br>
        <div class="form-group">
            <label for="exampleContactName1">Contact name:</label>
            <input  style="width: 400px;" type="text" class="form-control" name="contactName" placeholder="Enter contact name">
        </div>
        <br>
        <div class="form-group">
            <label for="exampleContactNumber1">Contact number:</label>
            <input  style="width: 400px;" type="text" class="form-control" name="contactNumber" placeholder="Enter contact number">
        </div>
        <br>
        <input type="submit" class="btn btn-primary"  value="Sign up">
        <a type="button" class="btn btn-secondary" href="/login">Cancel</a>
      </form>
</div>

   
